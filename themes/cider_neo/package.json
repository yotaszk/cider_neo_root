  "main": "index.js",
  "scripts": {
    "sass:build": "node-sass --include-path scss scss/style.scss ./style.css --output-style expanded --importer node_modules/node-sass-globbing/index.js",
    "sass:watch": "nodemon -e scss -x \"npm run sass:build\"",
    "sync": "browser-sync start --proxy localhost:8000  --files './**/*.css, ./**/*.php, ./**/*.scss'",
    "dev": "run-p sass:build sass:watch sync"
  },
