  "dependencies": {},
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "node-sass": "^4.13.1",
    "node-sass-globbing": "0.0.23",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5"
  }
}
